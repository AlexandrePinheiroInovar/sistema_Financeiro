rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // REGRA TEMPORÁRIA PARA DESENVOLVIMENTO E TESTES
    // Permite acesso total - USE APENAS PARA TESTAR A FUNCIONALIDADE
    match /{document=**} {
      allow read, write: if true;
    }
    
